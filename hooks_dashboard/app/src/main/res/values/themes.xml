<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme optimized for full-screen immersive experience. -->
    <style name="Theme.HooksDashboard" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <!-- Enable edge-to-edge display -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Full-screen configuration with aggressive cutout handling -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">always</item>
        
        <!-- Activity lifecycle optimizations -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
</resources>